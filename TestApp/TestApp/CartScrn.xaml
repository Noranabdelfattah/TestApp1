<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.CartScrn"
  Title="Your Reciept " BackgroundColor="Gray">
  <StackLayout>
  
  <Grid Padding="20" ColumnSpacing="10" RowSpacing="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>


  <Label x:Name="lablView" LineBreakMode="WordWrap" HorizontalOptions="CenterAndExpand"
        Grid.Column="0" Grid.ColumnSpan="2"
         Grid.Row="0" Grid.RowSpan="4"
        
         ></Label>

 <Label x:Name="total_lb" Grid.Column="0" Grid.Row="4" Text="Total : " FontAttributes="Bold"></Label>
    <Label x:Name="totalValue_lbl" Grid.Column="1" Grid.Row="4" Text="5000"></Label>
    
  </Grid>
    <Button x:Name="Done" 
            Text="OK Print The recipt" 
            Clicked="Done_OnClicked" 
            TextColor="Black" 
            BackgroundColor="Orange"/>

  </StackLayout>
</ContentPage>