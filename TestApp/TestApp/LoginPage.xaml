<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.LoginPage"
             Title="Login Page">


  <StackLayout Padding="25,40,40,40" VerticalOptions="Center" Spacing="10">

    <Image Source="onlinshopping.jpg" Aspect="AspectFit" HeightRequest="100" WidthRequest="200"  x:Name="Image1"/>
    
    <Label>Enter Your Login Name </Label>
    <Entry x:Name="NameEntry"
     ></Entry>

    <Label> Password </Label>
    <Entry x:Name="PassEntry"  IsPassword="True"
     ></Entry>
    <Button Text="Sign In" TextColor="Black" BackgroundColor="White" Clicked="SignIn_btn"></Button>
  </StackLayout>
</ContentPage>